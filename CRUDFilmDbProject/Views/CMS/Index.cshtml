@{
    Layout = "_CMS";
}
<h1>All Films</h1>

<p><a asp-controller="CMS" asp-action="AddFilm" class="add">Add Film</a></p>

<table class="table">
    <tr>
        <td>Film Title</td>
        <td>Edit</td>
        <td>Delete</td>
    </tr>
    @foreach (var item in Model)

    {
        <tr>
            <td><a asp-controller="Home" asp-action="FilmDetails" asp-route-id="@item.FilmID">@item.FilmTitle</a></td>
            <td><p><a asp-controller="CMS" asp-action="UpdateFilm" asp-route-id="@item.FilmID" class="edit">Update</a></p></td>
            <td><p><a asp-controller="CMS" asp-action="DeleteFilm" asp-route-id="@item.FilmID" class="delete">Delete</a></p></td>
        </tr>
    }

</table>